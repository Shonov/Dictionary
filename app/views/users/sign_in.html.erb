<div id="container">
  <% flash.each do |key, message| %>
  <p class="<%= key %>"><%= message %></p>
  <% end %>
  <%= form_with model: @user, html: {class: 'forms form-horizontal'}, local: true do |f| %>
  <h1><span class="log-in">Авторизация</span> </h1>
  <div class="form-group">
    <%= f.label "Почта:", for: :email, class: 'col-sm-2' %>
    <div class="col-sm-12">
      <%= f.text_field :email, class: 'form-control', placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Пароль:", class: 'col-sm-2' %>
    <div class="col-sm-12">
      <%= f.password_field "password", class: 'form-control', placeholder: "Password" %>
    </div>
  </div>
  <p class="col-sm-12">
    У вас нет аккаунта? 
    <%= link_to "Регистрация", sign_up_path %>
  </p>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-darger">Войти</button>
    </div>
  </div>
  <% end %>
</div>