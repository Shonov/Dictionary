<%= form_with model: @word, html: {class: 'form-horizontal'}, local: true do |f| %>
  <% if @word.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Английский", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :en, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Русский", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :ru, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Добавить"%>
    </div>
  </div>
<% end %>